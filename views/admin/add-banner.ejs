<section>
    <div class="container mt-4">
      <div class="row">
        <div class="col-md-6">
          <form action="/admin/add-banner" method="post" enctype="multipart/form-data">
            <h2 class="text-center">Add Banner</h2>
  
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control mt-5" id="name" name="name" required>
            </div>
  
            <div class="form-group">
              <label for="description" class="">Description</label>
              <textarea class="form-control mt-5" id="description" name="description" required></textarea>
            </div>
  
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control-file mt-5" accept="image/jpeg, image/png, image/jpg" id="image" name="image"  required>
            </div>
  
            <button type="submit" class="btn btn-success mt-3">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  