<div class="col-sm-12 col-xl-12">
    <a href="/admin/add-banner"  class="btn-info  ms-5 " >add banner</a>
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Banners</h6>
        <table class="table table-light">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Banner Name</th>

                    <th scope="col">Description</th>

                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
               
               
            <% banner.forEach((item,index)=>{ %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><img style="width: 50px;height: 50px;" src="/uploads/banner/<%=item.image%>"></td>
                    <td><%=item.name %></td>
               
               
                    <td><%=item.description %></td>
       
                    <td>
                        <!-- <a href="/admin/edit-banner/<%=item._id %>" class="btn btn-success">Edit</a> -->
                        <a href="/admin/delete-banner/<%=item._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                <% }) %>
              
               
            </tbody>
        </table>
    </div>
</div>